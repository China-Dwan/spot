<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springboottest.mapper.PUserMapper">

    <resultMap id="BaseResultMap1" type="springboottest.pojo.PUser">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <collection column="p_role_id" property="role"
                    javaType="java.util.ArrayList" ofType="springboottest.pojo.PRole"
                    select="springboottest.mapper.PUserMapper.findRoleById"/>
        <collection column="p_role_id" property="permissionList"
                    javaType="java.util.ArrayList" ofType="springboottest.pojo.PPermission"
                    select="springboottest.mapper.PUserMapper.findPermissionsPyRoleId"/>
    </resultMap>



    <select id="findByUsername" parameterType="java.lang.String" resultMap="BaseResultMap1">
        select * from p_user where username = #{username}
    </select>
    <select id="findPermissionsPyRoleId" parameterType="java.lang.String" resultType="springboottest.pojo.PPermission">
        select pp.id,pp.permission_code AS permissionCode from rel_role_permission rrp
        inner join p_permission pp on pp.id = rrp.p_permission_id
        where rrp.p_role_id = #{p_role_id}
    </select>
    <select id="findRoleById" parameterType="java.lang.String" resultType="springboottest.pojo.PRole">
        select id,role_name AS roleName from p_role where id = #{p_role_id}
    </select>

    <select id="myA" resultType="java.util.Map">
        select SQL_CALC_FOUND_ROWS * from  p_role limit 3;
        select found_rows();
    </select>
</mapper>